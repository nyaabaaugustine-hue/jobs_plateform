{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Chapel Hill Ltd platform.",
      "properties": {
        "email": { "type": "string", "description": "User's email address.", "format": "email" },
        "firstName": { "type": "string", "description": "User's first name." },
        "lastName": { "type": "string", "description": "User's last name." },
        "role": { "type": "string", "description": "The role of the user.", "enum": ["jobSeeker", "employer", "admin"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["email", "firstName", "lastName", "role", "createdAt"]
    },
    "Admin": {
      "title": "Admin",
      "type": "object",
      "description": "Represents an administrator account.",
      "properties": {
        "userId": { "type": "string" },
        "permissions": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["userId", "permissions"]
    },
    "Company": {
      "title": "Company",
      "type": "object",
      "description": "Represents a company profile.",
      "properties": {
        "name": { "type": "string" },
        "logo": { "type": "string" },
        "industry": { "type": "string" },
        "location": { "type": "string" },
        "description": { "type": "string" },
        "website": { "type": "string" },
        "employerId": { "type": "string", "description": "The UID of the employer who owns this company." }
      },
      "required": ["name", "industry", "location", "employerId"]
    },
    "Job": {
      "title": "Job",
      "type": "object",
      "description": "Represents a job posting.",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "companyId": { "type": "string" },
        "companyName": { "type": "string" },
        "companyLogo": { "type": "string" },
        "location": { "type": "string" },
        "type": { "type": "string", "enum": ["Full-time", "Part-time", "Contract", "Internship", "Volunteer"] },
        "experienceLevel": { "type": "string", "enum": ["Entry", "Mid-level", "Senior"] },
        "salaryRange": { "type": "string" },
        "skills": { "type": "array", "items": { "type": "string" } },
        "isUrgent": { "type": "boolean" },
        "postedDate": { "type": "string", "format": "date-time" },
        "employerId": { "type": "string" }
      },
      "required": ["title", "description", "companyId", "companyName", "location", "type", "experienceLevel", "postedDate", "employerId"]
    },
    "BlogPost": {
        "title": "Blog Post",
        "type": "object",
        "description": "Represents a blog article.",
        "properties": {
            "slug": { "type": "string" },
            "title": { "type": "string" },
            "content": { "type": "string" },
            "excerpt": { "type": "string" },
            "imageUrl": { "type": "string" },
            "imageHint": { "type": "string" },
            "authorName": { "type": "string" },
            "authorId": { "type": "string" },
            "publishedDate": { "type": "string", "format": "date-time" },
            "isPublished": { "type": "boolean" }
        },
        "required": ["slug", "title", "content", "authorId", "authorName", "publishedDate", "isPublished"]
    },
    "Application": {
        "title": "Application",
        "type": "object",
        "description": "Represents a job application from a user.",
        "properties": {
            "jobId": { "type": "string" },
            "jobTitle": { "type": "string" },
            "companyId": { "type": "string" },
            "companyName": { "type": "string" },
            "applicantId": { "type": "string" },
            "applicantName": { "type": "string" },
            "employerId": { "type": "string" },
            "status": { "type": "string", "enum": ["Applied", "Screening", "Interview", "Offer", "Hired", "Rejected"] },
            "appliedDate": { "type": "string", "format": "date-time" },
            "coverLetter": { "type": "string" }
        },
        "required": ["jobId", "companyId", "applicantId", "employerId", "status", "appliedDate"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": { "schema": { "$ref": "#/entities/User" }, "description": "Stores user profiles." }
      },
      {
        "path": "/roles_admin/{userId}",
        "definition": { "schema": { "$ref": "#/entities/Admin" }, "description": "Determines admin status by document existence." }
      },
      {
        "path": "/companies/{companyId}",
        "definition": { "schema": { "$ref": "#/entities/Company" }, "description": "Stores company profiles." }
      },
      {
        "path": "/jobs/{jobId}",
        "definition": { "schema": { "$ref": "#/entities/Job" }, "description": "Stores all job postings." }
      },
      {
        "path": "/blogPosts/{postId}",
        "definition": { "schema": { "$ref": "#/entities/BlogPost" }, "description": "Stores blog posts." }
      },
      {
        "path": "/applications/{applicationId}",
        "definition": { "schema": { "$ref": "#/entities/Application" }, "description": "Stores all job applications for query by employers and applicants." }
      }
    ]
  }
}
