
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isEmployer() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employer';
    }

    // Rules for user profiles
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    // Rules for admin role lookup
    match /roles_admin/{userId} {
      allow get, list: if isAdmin();
      allow create, update, delete: if false; // Should only be managed from server/console
    }

    // Rules for companies
    match /companies/{companyId} {
      allow read: if true;
      allow create: if isEmployer() && request.auth.uid == request.resource.data.employerId;
      allow update: if (isEmployer() && request.auth.uid == resource.data.employerId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for jobs
    match /jobs/{jobId} {
        allow read: if true;
        allow create: if isEmployer() && request.auth.uid == request.resource.data.employerId;
        allow update: if (isEmployer() && request.auth.uid == resource.data.employerId) || isAdmin();
        allow delete: if (isEmployer() && request.auth.uid == resource.data.employerId) || isAdmin();
    }

    // Rules for blog posts
    match /blogPosts/{postId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
    }

    // Rules for applications
    match /applications/{applicationId} {
        allow read: if isSignedIn() && (request.auth.uid == resource.data.applicantId || request.auth.uid == resource.data.employerId || isAdmin());
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.applicantId;
        allow update: if isSignedIn() && (request.auth.uid == resource.data.employerId || isAdmin()); // For status changes
        allow delete: if isAdmin();
    }
  }
}
