
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for reusable logic
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isRole(role) {
      return isSignedIn() && getUserRole() == role;
    }
    
    // Checks if the requesting user is part of the hiring team for a given company
    function isHiringTeamMember(companyId) {
      let user = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      let company = get(/databases/$(database)/documents/companies/$(companyId)).data;
      let userRole = getUserRole();

      let isCompanyOwner = company.employerId == request.auth.uid && userRole == 'employer';
      let isTeamMember = (userRole == 'recruiter' || userRole == 'hiringManager') && user.companyId == companyId;

      return isCompanyOwner || isTeamMember;
    }

    // Rules for user profiles
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    // Rules for admin role lookup
    match /roles_admin/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId); // Allow users to create their own admin role doc for demo purposes
      allow update, delete: if false; // Should only be managed from server/console
    }

    // Rules for companies
    match /companies/{companyId} {
      allow read: if true;
      allow create: if isRole('employer') && request.auth.uid == request.resource.data.employerId;
      allow update: if isHiringTeamMember(companyId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for jobs
    match /jobs/{jobId} {
        allow read: if true;
        allow create: if isRole('employer') && request.auth.uid == request.resource.data.employerId;
        allow update: if isHiringTeamMember(request.resource.data.companyId) || isAdmin();
        allow delete: if isHiringTeamMember(request.resource.data.companyId) || isAdmin();
    }

    // Rules for blog posts
    match /blogPosts/{postId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
    }

    // Rules for applications
    match /applications/{applicationId} {
        allow read: if isSignedIn() && (request.auth.uid == resource.data.applicantId || isHiringTeamMember(resource.data.companyId) || isAdmin());
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.applicantId;
        allow update: if isSignedIn() && (isHiringTeamMember(resource.data.companyId) || isAdmin());
        allow delete: if isAdmin();
    }
  }
}
